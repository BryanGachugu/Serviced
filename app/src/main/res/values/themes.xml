<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Serviced" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/teal_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_blue</item>
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:textViewStyle">@style/ConcertTexViewStyle</item>
        <item name="android:buttonStyle">@style/ConcertButtonStyle</item>

    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/light_blue</item>
        <item name="android:navigationBarColor">@color/light_blue</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="expandedBarTextStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Serviced.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/orange</item>
        <item name="colorControlActivated">@color/dark_orange</item>
    </style>

    <style name="ConcertTexViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/concert_one</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ConcertButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/concert_one</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>