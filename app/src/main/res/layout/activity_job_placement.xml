<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.JobPlacementActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/job_placement_back_button"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_margin="7dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/arrow_back" />

            <TextView
                android:id="@+id/txt_provider_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:layout_toEndOf="@id/job_placement_back_button"
                android:gravity="end"
                android:textColor="@color/normal_text_color"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/provider_profile_pic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/test_1"
            app:civ_border_color="@color/light_blue"
            app:civ_border_width="3dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/provider_rating_bar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:numStars="5"
                android:progressTint="@color/dark_orange"
                android:rating="4.5" />

            <TextView
                android:id="@+id/txt_provider_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:textColor="@color/normal_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/provider_number_of_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textColor="@color/normal_text_color"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_700"
                android:orientation="vertical"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@android:color/transparent"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/crimson_text"
                        android:gravity="center_horizontal"
                        android:text="@string/jobs"
                        android:textColor="@color/white"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/txt_skill_job_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:backgroundTint="@android:color/transparent"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:orientation="vertical"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/transparent"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/crimson_text"
                        android:gravity="center_horizontal"
                        android:text="@string/experience"
                        android:textColor="@color/normal_text_color"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/txt_provider_experience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:gravity="center_horizontal"
                        android:textColor="@color/normal_text_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_blue"
                android:orientation="vertical"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@android:color/transparent"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:backgroundTint="@android:color/transparent"
                        android:fontFamily="@font/crimson_text"
                        android:gravity="center_horizontal"
                        android:text="Certification"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/txt_provider_certification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@android:color/transparent"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
            android:id="@+id/themedButtonGroup"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@android:color/transparent"
            app:alignItems="center"
            app:toggle_selectableAmount="1">

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/btnMultipleChoice"
                android:layout_width="0dp"
                android:layout_height="145dp"
                android:backgroundTint="@android:color/transparent"
                android:gravity="center_horizontal"
                app:layout_flexGrow="1"
                app:toggle_icon="@drawable/ic_schedule_24"
                app:toggle_iconGravity="top|center"
                app:toggle_iconPaddingHorizontal="15dp"
                app:toggle_iconPaddingTop="15dp"
                app:toggle_selectedBackgroundColor="#5e6fed"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_text="Order Now"
                app:toggle_textColor="@color/normal_text_color"
                app:toggle_textGravity="bottom|center"
                app:toggle_textPaddingBottom="20dp" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/btnTyped"
                android:layout_width="0dp"
                android:layout_height="145dp"
                android:backgroundTint="@android:color/transparent"
                android:gravity="center_horizontal"
                app:layout_flexGrow="1"
                app:toggle_icon="@drawable/ic_schedule_24"
                app:toggle_iconGravity="top|center"
                app:toggle_iconPaddingHorizontal="15dp"
                app:toggle_iconPaddingTop="15dp"
                app:toggle_selectedBackgroundColor="#5e6fed"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_text="Add To Schedule"
                app:toggle_textColor="@color/normal_text_color"
                app:toggle_textGravity="bottom|center"
                app:toggle_textPaddingBottom="20dp" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/btnMemory"
                android:layout_width="0dp"
                android:layout_height="145dp"
                android:backgroundTint="@android:color/transparent"
                android:gravity="center_horizontal"
                app:layout_flexGrow="1"
                app:toggle_icon="@drawable/ic_schedule_24"
                app:toggle_iconGravity="top|center"
                app:toggle_iconPaddingHorizontal="15dp"
                app:toggle_iconPaddingTop="15dp"
                app:toggle_selectedBackgroundColor="#5e6fed"
                app:toggle_selectedTextColor="@android:color/white"
                app:toggle_text="Request call"
                app:toggle_textColor="@color/normal_text_color"
                app:toggle_textGravity="bottom|center"
                app:toggle_textPaddingBottom="20dp" />

        </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>

        <LinearLayout
            android:id="@+id/layout_order_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_request_task"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="50dp"
                android:backgroundTint="@color/button_bg_tint"
                android:elevation="2dp"
                android:fontFamily="@font/concert_one"
                android:text="@string/request_task"
                android:textAllCaps="false"
                android:textColor="@color/button_text_color"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>